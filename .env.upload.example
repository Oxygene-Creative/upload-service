# Required
GRAPHQL_URI="https://monitorapi.oxygenehosting.com/graphql"
GRAPHQL_API_KEY="<your-graphql-api-key>"
MEDIASERVER_URI="http://media_server:8710"
AUDIOVISUAL_API_URI="https://monitorapi.oxygenehosting.com/api/av"

# Workflow A: explicit directories (comma-separated, absolute or relative to LOCAL_RECORDING_DIR)
# LOCAL_RECORDING_DIR="/home/peter/tech_onpremise/o2-monitor"
TARGET_DIRECTORIES="/home/peter/tech_onpremise/o2-monitor/2026-01-30/ntv"

# Workflow B: daily folder (BASE_RECORDING_DIR + YYYY-MM-DD)
# BASE_RECORDING_DIR="/home/peter/tech_onpremise/o2-monitor"
# DAILY_RECORDING_DATE="2026-01-30"  # optional override; defaults to today

# Optional behavior
SKIP_TS_CONVERSION="false"
SKIP_INGESTION="false"
RECURSIVE_SCAN="true"
WAIT_FOR_COMPLETION="true"

# Optional: date format for DAILY_RECORDING_DATE default
DAILY_RECORDING_DATE_FORMAT="%Y-%m-%d"

# Optional: ES completion polling
ELASTIC_NODE="https://your-elastic-cloud.es.us-east-1.aws.elastic.cloud:443"
ELASTIC_API_KEY="<your-elastic-api-key>"
ELASTIC_INDEX_PATTERN="tv_*"
COMPLETION_POLL_SECONDS="30"
COMPLETION_TIMEOUT_SECONDS="7200"

# Optional: manifest path
# MANIFEST_PATH="/home/peter/tech_onpremise/o2-monitor/.upload_manifest.json"
